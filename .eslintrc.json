{
	"env": {
		"es2022": true,
		"node": true,
		"jest": true
	},
	"extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"no-unused-vars": "error",
		"no-new-object": "warn",
		"object-shorthand": "warn",
		"arrow-parens": ["error", "as-needed"],
		"func-names": "off",
		"no-process-exit": "off",
		"quote-props": "error",
		"class-methods-use-this": "off"
	},
	"plugins": ["import", "prettier"],
	"import/extensions": [
		{
		  "js": "always"
		}
	]
}
